generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model persona {
  id            Int      @id @default(autoincrement())
  nombre        String
  identificacion String
  registros     registro[]
  estado        estado @default(activo)
}

model encuesta {
  id             Int      @id @default(autoincrement())
  descripcion    String
  detalles       String
  registros      registro[]
  estado         estado @default(activo)
}


model registro {
  id            Int      @id @default(autoincrement())
  fecha         DateTime
  hora          DateTime
  ubicacion     String
  persona       persona  @relation(fields: [personaId], references: [id])
  personaId     Int
  encuesta      encuesta @relation(fields: [encuestaId], references: [id])
  encuestaId    Int
  estado        estado @default(activo)
}

enum estado{
  activo
  pendiente
  eliminado
}